{
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "no-inner-declarations": "warn",
      "prefer-template": "warn",
      "no-useless-escape": "warn",
      "no-constant-condition": "warn",
      "template-curly-spacing": [
        "error",
        "never"
      ],
      "indent": [
        "warn",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
